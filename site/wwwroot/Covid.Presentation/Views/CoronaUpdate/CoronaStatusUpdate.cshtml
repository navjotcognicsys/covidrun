@model Covid.Infrastructure.ViewModel.CoronaDashboard.vmCoronaDashboard
@using Covid.Infrastructure.Helpers;
@using Covid.Core.Common;
@{
    ViewBag.Title = "QurantineCheckForm";
    if (SessionHelper.UserDetails != null)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";

    }
    else
    {
        Layout = null;
    }
}
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0">Corona Status Update -Today </h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                   
                        <div class="table-responsive">

                            <table id="x" class="table table-bordered">
                                <thead>
                                    <tr role="row">
                                       
                                        <th >Active Case</th>
                                        <th >Admit in hospital</th>
                                        <th >Home Isolation</th>
                                        <th >Recovered</th>
                                        <th> Death </th>
                                    </tr>
                                </thead>
                                <tbody>

                                     
                                           
                                    <tr role="row" class="odd">
                                        <form action="~/CoronaDashboard/CreateCoranaData" method="post" id="myForm">
                                            <td tabindex="0" class="sorting_1">
                                                <input type="text" name="ActiveCases" value=@Model.DashboardCoroanCurentStatus.ActiveCases >
                                            </td>

                                            <td>
                                                <input type="text" name="AdmitInHospital" value=@Model.DashboardCoroanCurentStatus.AdmitInHospital >
                                            </td>
                                            <td>
                                                <input type="text" name="HomeIsolation" value=@Model.DashboardCoroanCurentStatus.HomeIsolation >
                                            </td>
                                            <td>
                                                <input type="text" name="RecoveredCases" value=@Model.DashboardCoroanCurentStatus.RecoveredCases >
                                            </td>
                                            <td>
                                                <input type="text" name="Deaths" value=@Model.DashboardCoroanCurentStatus.Deaths >
                                            </td>
                                            <td>
                                                <input type="submit" value="Submit" />

                                            </td>
                                        </form>

                                    </tr>
                                                




                                        </tbody>

                            </table>
                        </div>
                </div>
            </div>
            </div>
    </div>